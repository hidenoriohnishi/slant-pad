{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    { 
      "src": "/fonts.css", 
      "headers": { "content-type": "text/css" },
      "dest": "/fonts.css" 
    },
    { 
      "src": "/fonts/(.*)", 
      "dest": "/fonts/$1" 
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
} 